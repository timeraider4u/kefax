<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension
        point="org.eclipse.ui.commands">
     <command
           defaultHandler="at.jku.weiner.antlr4.Antlr4Action"
           id="at.jku.weiner.antlr4.command"
           name="Antlr4 command">
     </command>
      <command
           defaultHandler="at.jku.weiner.antlr4.Antlr4PrintAction"
           id="at.jku.weiner.antlr4print.command"
           name="Antlr4 print command">
     </command>
  </extension>
  
  <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           allPopups="false"
           locationURI="menu:org.eclipse.ui.main.menu">
        <menu
              id="at.jku.weiner.kefax.main.filemenu"
              label="KeFaX" />
     </menuContribution>
  </extension>
  <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           allPopups="false"
           locationURI="menu:at.jku.weiner.kefax.main.filemenu">
           <command
                 commandId="at.jku.weiner.antlr4.command"
                 label="Antlr4"
                 style="push"
                 tooltip="Antlr4 test command">
           </command>
           <command
                 commandId="at.jku.weiner.antlr4print.command"
                 label="Antlr4 print"
                 style="push"
                 tooltip="Antlr4 print command">
           </command>
       </menuContribution>
     </extension>
	<extension
			point="org.eclipse.ui.menus">
		<menuContribution
				locationURI="popup:org.eclipse.ui.popup.any">
			<command
					commandId="at.jku.weiner.antlr4.command"
					id="at.jku.weiner.antlr4.command.menu">
				<visibleWhen>
					<with variable="activeMenuSelection">
						<iterate ifEmpty="false">
							<adapt type="org.eclipse.core.resources.IResource">
								<test 
									property="org.eclipse.core.resources.name"
									value="*.g4" />
							</adapt>
						</iterate>
					</with>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated Antlr4 -->
      <package
            uri="https://www.jku.at/weiner/antlr4"
            class="at.jku.weiner.antlr4.Antlr4Package"
            genModel="model/Antlr4.genmodel"/>
   </extension>

</plugin>
