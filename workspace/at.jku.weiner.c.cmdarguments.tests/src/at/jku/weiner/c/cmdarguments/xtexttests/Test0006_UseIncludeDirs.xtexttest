package at.jku.weiner.c.cmdarguments
language cmdArgs
// imports at.jku.weiner.c.common.common
//----------------------------------------------------------------------
split-lexer=false
source file="res/Test0006_UseIncludeDirs.cmd"
//----------------------------------------------------------------------
lexer-tokens
	INCDIR ID ANY_OTHER ID ANY_OTHER ID WS 
		INCDIR ANY_OTHER+*2 ID ANY_OTHER ID ANY_OTHER ID WS
		INCDIR ID ANY_OTHER+*2 ID ANY_OTHER ID
		NEWLINE
	INCSYS WS ID ANY_OTHER+*2 ID ANY_OTHER ID WS
		INCSYS WS
			// /usr/lib/gcc 
			ANY_OTHER ID ANY_OTHER ID ANY_OTHER ID
			// /x86_64-pc-linux
			ANY_OTHER ID ANY_OTHER ID ANY_OTHER ID
			// -gnu/4.8.4
			ANY_OTHER ID ANY_OTHER INT ANY_OTHER INT ANY_OTHER INT
			// /include
			ANY_OTHER ID
		NEWLINE
	DEFINE ID
//----------------------------------------------------------------------

(Model
	lines+=
	(CmdLine
		arguments+=
		(Argument
			incDir?=true,
			useIncDir=
			(PathCmd
				path++"foo/bar/include"
			)
		),
		(Argument
			incDir?=true,
			useIncDir=
			(PathCmd
				path++"./foobar/bar/include"
			)
		),
		(Argument
			incDir?=true,
			useIncDir=
			(PathCmd
				path++"C:\\\\system\\\\include"
			)
		)
	),
	(CmdLine
		arguments+=
		(Argument
			incDir?=false,
			incSys?=true,
			useIncDir=
			(PathCmd
				path++"C:\\\\system32\\\\include"
			)
		),
		(Argument
			incDir?=false,
			incSys?=true,
			useIncDir=
			(PathCmd
				path++"/usr/lib/gcc/x86_64-pc-linux-gnu/4.8.4/include"
			)
		)
	),
	(CmdLine
		arguments+=
		(Argument
			incDir?=false,
			incSys?=false,
			macro=			
			(SimpleMacro
				name++"__FOO__"
			)
		)
	)
)


