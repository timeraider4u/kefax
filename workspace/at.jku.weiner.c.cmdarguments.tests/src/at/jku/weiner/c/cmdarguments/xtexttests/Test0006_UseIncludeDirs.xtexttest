package at.jku.weiner.c.cmdarguments
language cmdArgs
// imports at.jku.weiner.c.common.common
//----------------------------------------------------------------------
split-lexer=false
source file="res/Test0006_UseIncludeDirs.cmd"
//----------------------------------------------------------------------
lexer-tokens
	INCLUDE ID ANY_OTHER ID ANY_OTHER ID WS 
		INCLUDE ANY_OTHER+*2 ID ANY_OTHER ID ANY_OTHER ID WS
		INCLUDE ID ANY_OTHER+*2 ID ANY_OTHER ID
		NEWLINE
	DEFINE ID
//----------------------------------------------------------------------

(Model
	lines+=
	(CmdLine
		arguments+=
		(Argument
			incDir?=true,
			useIncDir=
			(UseIncludeDirCmd
				path++"foo/bar/include"
			)
		),
		(Argument
			incDir?=true,
			useIncDir=
			(UseIncludeDirCmd
				path++"./foobar/bar/include"
			)
		),
		(Argument
			incDir?=true,
			useIncDir=
			(UseIncludeDirCmd
				path++"C:\\\\system\\\\include"
			)
		)
	),
	(CmdLine
		arguments+=
		(Argument
			incDir?=false,
			incSys?=false,
			macro=			
			(SimpleMacro
				name++"__FOO__"
			)
		)
	)
)


