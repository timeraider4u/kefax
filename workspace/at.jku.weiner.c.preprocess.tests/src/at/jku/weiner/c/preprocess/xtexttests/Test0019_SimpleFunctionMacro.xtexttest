package at.jku.weiner.c.preprocess
language preprocess
//----------------------------------------------------------------------
split-lexer=true
source file="res/Test0019_SimpleFunctionMacro.c"
//----------------------------------------------------------------------
lexer-tokens
	HASH DEFINE WS ID SKW_LEFTPAREN SKW_RIGHTPAREN WS ID SKW_LEFTPAREN SKW_RIGHTPAREN NEWLINE
	NEWLINE
	ID WS ID SKW_LEFTPAREN SKW_RIGHTPAREN SKW_SEMI NEWLINE
	ID WS ID WS SKW_LEFTPAREN WS SKW_RIGHTPAREN SKW_SEMI NEWLINE
//----------------------------------------------------------------------
(Model
	units+=
	(TranslationUnit
		group=
		(GroupOpt
			lines+=
			(PreprocessorDirectives
				directive=
				(DefineDirective
					id++"halt",
					string++"stop()"
				)
			),
			(NewLineLine),
			(Code
				code++"void halt();"
			),
			(Code
				code++"void halt (	);"
			)
			
		)
	)
)
//----------------------------------------------------------------------
output file="bin/Test0019_SimpleFunctionMacro.c.i"
expected file="expected/Test0019_SimpleFunctionMacro.c"
