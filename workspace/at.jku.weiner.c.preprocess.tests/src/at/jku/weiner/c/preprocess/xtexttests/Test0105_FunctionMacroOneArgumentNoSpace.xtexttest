package at.jku.weiner.c.preprocess
language preprocess
imports at.jku.weiner.c.common.common
//----------------------------------------------------------------------
split-lexer=false
source file="res/Test0105_FunctionMacroOneArgumentNoSpace.c"
//----------------------------------------------------------------------
lexer-tokens
	HASH DEFINE WHITESPACE ID SKW_LEFTPAREN ID SKW_RIGHTPAREN 
		SKW_LEFTPAREN ID WHITESPACE SKW_PLUS WHITESPACE DECIMAL_LITERAL SKW_RIGHTPAREN NEWLINE
	ID WHITESPACE ID WHITESPACE SKW_ASSIGN WHITESPACE ID SKW_LEFTPAREN DECIMAL_LITERAL SKW_RIGHTPAREN SKW_SEMI NEWLINE
//----------------------------------------------------------------------
//(common::Model
	//units+=
	//(common::TranslationUnit
	(Preprocess
		group=
		(GroupOpt
			lines+=
			(PreprocessorDirectives
				directive=
				(DefineFunctionLikeMacro
					id++"inc",
					list=
					(IdentifierList
						id+*"[x]"
					),
					replacement+=
					(ReplaceLine
						string++"(x + 1)"
					)
				)
			),
			(Code
				code++"int x = inc(5);"
			)
			
		)
	)
//)
//)
//----------------------------------------------------------------------
output file="bin/Test0105_FunctionMacroOneArgumentNoSpace.c.i"
expected file="expected/Test0105_FunctionMacroOneArgumentNoSpace.c"
