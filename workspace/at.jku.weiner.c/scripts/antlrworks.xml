<project name="MyProject" default="runAntlrWorks" basedir=".">
	<property name="libs" location="../../../libs"/>
	<property name="myAntlr" value="${libs}/antlr-generator-3.5.3-patch.jar"/>
	<property name="plugins" location="${osgi.syspath}" />
	<property name="dstJars" location="/tmp/jars" />
	<target name="cleanUpDstJars" >
		<exec executable="rm" failonerror="false">
			<arg line="${dstJars}"/>
		</exec>
	</target>
	<target name="createSymLink" depends="cleanUpDstJars">
		<exec executable="ln" failonerror="true">
			<arg line="-s '${plugins}' '${dstJars}'"/>
		</exec>
	</target>
	<target name="runAntlrWorks" depends="createSymLink">
		<java classname="org.antlr.works.IDE" fork="true">
			<classpath>
				<pathelement location="${libs}/antlrworks-1.5.2.jar"/>
				<pathelement location="${myAntlr}"/>
				<pathelement location="${dstJars}/*"/>
				<pathelement path="${java.class.path}"/>
				<pathelement path="../bin"/>
			</classpath>
		</java>
	</target>
</project>
